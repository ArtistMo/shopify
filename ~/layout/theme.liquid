    <script>
      document.addEventListener("DOMContentLoaded", function () {
        function updateFreeShippingBar(cart) {
          const threshold = 999;
          const current = cart.total_price / 100;
          const progress = Math.min((current / threshold) * 100, 100);
          const remaining = threshold - current;

          const wrapper = document.getElementById("free-shipping-progress");
          if (!wrapper) return;

          if (current < threshold) {
            wrapper.innerHTML = `
              <p>Spend ₹${remaining.toFixed(2)} more for free shipping!</p>
              <div style="width:100%; background:#e5e5e5; height:8px; border-radius:4px;">
                <div style="width:${progress}%; background:#22c55e; height:8px;"></div>
              </div>
            `;
          } else {
            wrapper.innerHTML = `<p class="text-green-600 font-semibold">You’ve unlocked free shipping!</p>`;
          }
        }

        function fetchCartAndUpdateBar() {
          fetch('/cart.js')
            .then(res => res.json())
            .then(cart => updateFreeShippingBar(cart));
        }

        fetchCartAndUpdateBar();
        document.body.addEventListener('cart:refresh', fetchCartAndUpdateBar);
      });
    </script>
