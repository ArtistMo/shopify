<script>
(function(){
  const isProduct = document.body.classList.contains('template-product');
  const drawer = document.getElementById('compare-drawer');
  const overlayCloseEls = drawer.querySelectorAll('[data-close]');
  const grid = document.getElementById('cmpd-grid');
  const tableWrap = document.getElementById('cmpd-table-wrap');
  const tbody = document.getElementById('cmpd-tbody');
  const fab = document.getElementById('compare-fab');

  /* ---------------- State ---------------- */
  let selected = JSON.parse(localStorage.getItem('compareList') || '[]'); // array of handles
  const setSelected = (arr) => {
    selected = arr.slice(0, 4); // hard cap at 4 columns for readability
    localStorage.setItem('compareList', JSON.stringify(selected));
    renderTable();
    syncChecks();
  };

  /* ---------------- Open/Close ---------------- */
  const openDrawer = () => { drawer.setAttribute('aria-hidden','false'); };
  const closeDrawer = () => {
  drawer.setAttribute('aria-hidden','true');

  // Clear picks for the next open
  localStorage.removeItem('compareList');   // wipe persistence
  setSelected([]);                          // clear in-memory + hide table

  // Uncheck all checkboxes in the grid (if it was loaded)
  grid.querySelectorAll('.cmpd-check').forEach(i => (i.checked = false));
};

  overlayCloseEls.forEach(el => el.addEventListener('click', closeDrawer));
  fab.addEventListener('click', () => {
    // lazy-load products if grid empty
    if (!grid.dataset.loaded) loadRandomProducts(24);
    openDrawer();
  });

  /* ---------------- Load Products for Grid ---------------- */
  function loadRandomProducts(limit=24){
    // Pull up to 50 products (Shopify allows /products.json?limit=…)
    fetch('/products.json?limit=50')
      .then(r => r.json())
      .then(({ products }) => {
        if (!products || !products.length) return;
        // randomize
        products.sort(()=>Math.random() - 0.5);
        const sample = products.slice(0, limit);
        grid.innerHTML = sample.map(p => cardHTML(p)).join('');
        grid.dataset.loaded = '1';
        grid.querySelectorAll('.cmpd-check').forEach(input => {
          input.addEventListener('change', onToggleCheck);
        });
        syncChecks();
        renderTable();
      })
      .catch(()=>{ grid.innerHTML = '<p style="grid-column:1/-1;color:#888;">Couldn’t load products.</p>'; });
  }

  function cardHTML(p){
    const img = (p.images && p.images[0]) ? p.images[0].src : (p.featured_image || '');
    const price = p.variants && p.variants[0] ? p.variants[0].price : '';
    const checked = selected.includes(p.handle) ? 'checked' : '';
    return `
      <article class="cmpd-card" data-handle="${p.handle}">
        <div class="cmpd-media">${img ? `<img src="${img}" alt="${escapeHTML(p.title)}">` : ''}</div>
        <div class="cmpd-info">
          <p class="cmpd-title">${escapeHTML(p.title)}</p>
          <div class="cmpd-meta">
            <span class="cmpd-price">${formatMoney(price)}</span>
            <label class="cmpd-pick">
              <input class="cmpd-check" type="checkbox" data-handle="${p.handle}" ${checked}>
              Pick
            </label>
          </div>
        </div>
      </article>`;
  }

  function onToggleCheck(e){
    const handle = e.target.dataset.handle;
    if (e.target.checked) {
      if (!selected.includes(handle)) setSelected([...selected, handle]);
    } else {
      setSelected(selected.filter(h => h !== handle));
    }
  }

  function syncChecks(){
    grid.querySelectorAll('.cmpd-check').forEach(input => {
      input.checked = selected.includes(input.dataset.handle);
    });
  }

  /* ---------------- Build Comparison Table ---------------- */
  function renderTable(){
    if (!selected.length){
      tableWrap.hidden = true;
      return;
    }
    tableWrap.hidden = false;
    tbody.innerHTML = ''; // clear
    // rows we want to render (in order)
    const rows = [
      { key:'image', label:'Image' },
      { key:'title', label:'Title' },
      { key:'price', label:'Price' },
      { key:'vendor', label:'Vendor' },
      { key:'type', label:'Type' }
    ];

    // Create skeleton while fetching
    rows.forEach(r => {
      const tr = document.createElement('tr');
      tr.innerHTML = `<td>${r.label}</td>` + selected.map(()=>`<td>…</td>`).join('');
      tbody.appendChild(tr);
    });

    // Fetch details in parallel
    Promise.all(selected.map(h => fetch(`/products/${h}.js`).then(r=>r.json())))
      .then(products => {
        // fill each row
        // Image
        setRowCells('image', products.map(p => {
          const img = p && p.featured_image ? p.featured_image : '';
          return img ? `<a href="/products/${p.handle}" target="_blank" rel="noopener">
            <img src="${img}" alt="${escapeHTML(p.title)}">
          </a>` : '';
        }));
        // Title
        setRowCells('title', products.map(p => `<a href="/products/${p.handle}" target="_blank" rel="noopener">${escapeHTML(p.title)}</a>`));
        // Price
        setRowCells('price', products.map(p => p && p.price ? formatMoney(p.price/100) : (p.compare_at_price ? formatMoney(p.compare_at_price/100) : '—')));
        // Vendor
        setRowCells('vendor', products.map(p => escapeHTML(p.vendor || '—')));
        // Type
        setRowCells('type', products.map(p => escapeHTML(p.type || '—')));
      })
      .catch(()=>{/* ignore */});
  }

  function setRowCells(key, htmlArr){
    const trs = Array.from(tbody.querySelectorAll('tr'));
    const map = { image:0, title:1, price:2, vendor:3, type:4, desc:5 };
    const idx = map[key];
    if (trs[idx]) {
      const tds = trs[idx].querySelectorAll('td');
      // first cell is the label, fill subsequent
      htmlArr.forEach((html, i) => { if (tds[i+1]) tds[i+1].innerHTML = html; });
    }
  }

  /* ---------------- Utils ---------------- */
  function formatMoney(v){
    if (!v) return '—';
    const n = typeof v === 'string' ? parseFloat(v) : v;
    if (isNaN(n)) return '—';
    // INR formatting
    return '₹' + n.toLocaleString('en-IN', { maximumFractionDigits: 2 });
  }
  function escapeHTML(s){ return (s||'').toString().replace(/[&<>"']/g,m=>({ '&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;' }[m])); }

  /* ---------------- Close by ESC ---------------- */
  document.addEventListener('keydown', (e)=>{ if(e.key==='Escape') closeDrawer(); });

})();
</script>
